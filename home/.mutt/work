set spoolfile="+herrbischoff.com/INBOX"
set postponed="+herrbischoff.com/Drafts"
set record="+herrbischoff.com/Sent"

## Send options.
set sendmail = "/usr/local/bin/msmtp -a herrbischoff"
set realname = "Marcel Bischoff
set from = marcel@herrbischoff.com
set hostname = herrbischoff.com

mailboxes +herrbischoff.com/INBOX \
          +herrbischoff.com/Archive \
          +herrbischoff.com/Sent \
          +herrbischoff.com/Drafts \
          +herrbischoff.com/Trash \
          +herrbischoff.com/Logs \
          +herrbischoff.com/Articles

subscribe ^mutt-users@mutt\\.org$

macro index A "<save-message>=herrbischoff.com/Archive<return>" "move message to archive folder"

account-hook $folder "set spoolfile="+herrbischoff.com/INBOX"

